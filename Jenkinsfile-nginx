pipeline {
    agent any
    environment {
        DOCKER_REGISTRY = "registry.digitalocean.com/devopsrepo"
        IMAGE_NAME = "nginx-hello-world"
    }
    stages {
        stage('Cleanup') {
            steps {
                cleanWs()  // Önceki build dosyalarını temizle
            }
        }
        stage('Checkout') {
            steps {
                git branch: 'nginx', credentialsId: 'gitsecret', url: 'https://github.com/bubidevops/apps.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $DOCKER_REGISTRY/$IMAGE_NAME:latest .'
            }
        }
        stage('Docker Login') {
            steps {
                docker.withRegistry("$DOCKER_REGISTRY", 'ecrsecret') {
                sh "docker push $DOCKER_REGISTRY/$IMAGE_NAME:latest"
}

            }
        }    
        stage('Push to Registry') {
            steps {
                withDockerRegistry([credentialsId: 'ecrsecret', url: "$DOCKER_REGISTRY"]) {
                    sh "docker push $DOCKER_REGISTRY/$IMAGE_NAME:latest"
                }
            }
        }
    }
    post {
        always {
            sh 'docker system prune -f'
        }
    }
}
